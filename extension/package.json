{
  "name": "vscode-extension-client-server",
  "displayName": "VS Code Extension with Python Backend",
  "description": "VS Code extension that communicates with a local FastAPI Python backend server",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "discoveredEndpoints",
          "name": "Discovered Endpoints",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.refreshEndpoints",
        "title": "Refresh Endpoints",
        "icon": "$(refresh)"
      },
      {
        "command": "extension.executeEndpoint",
        "title": "Execute Endpoint"
      },
      {
        "command": "extension.openBlockEditor",
        "title": "Open Block Editor",
        "icon": "$(symbol-array)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "extension.refreshEndpoints",
          "when": "view == discoveredEndpoints",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "extension.executeEndpoint",
          "when": "view == discoveredEndpoints",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@types/node-fetch": "^2.6.2",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "node-fetch": "^2.6.7"
  }
}
